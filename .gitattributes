# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Text files
*.txt text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
